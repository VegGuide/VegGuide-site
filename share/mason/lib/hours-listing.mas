<div id="hours">
%   foreach my $desc (@descriptions) {
  <div class="hours-set">
    <label><% $desc->{days} | h %></label>
    <span class="hours-times">
      <% $desc->{hours}[0] | h %>\
%     if ( $desc->{hours}[1] ) {
;<br /> <% $desc->{hours}[1] | h %>
%     }
    </span>
  </div>
%   }
</div>

<%args>
@descriptions
</%args>
