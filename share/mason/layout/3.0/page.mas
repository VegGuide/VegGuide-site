<& header.mas, %ARGS &>

% if (@messages) {
  <div id="messages" class="<% $m->request_comp()->attr('is_front_page') ? 'front-page' : '' %>">
%   for my $msg (@messages) {
   <p>
    <% $msg | h %>
   </p>
%   }
  </div>
% }

% $m->call_next();

  <& footer.mas, %ARGS &>

<%init>
my @messages = @{ $c->session()->{messages} || [] };
</%init>
