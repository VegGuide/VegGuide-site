% if ($vendors) {
    <ul>
%   while ( my $vendor = $vendors->next() ) {
     <li><& /lib/link/vendor.mas, vendor => $vendor &>
         in <& /lib/link/location-and-parent.mas, location => $vendor->location() &>
     </li>
%   }
    </ul>
% } else {
    <p>
      This user has not created any entries.
    </p>
% }

<%args>
$user
$vendors => undef
</%args>

<%attr>
layout => '3.5'
</%attr>

<%method page_title>
Entries created by <% $user->real_name() | h %>
<%args>
$user
</%args>
</%method>
