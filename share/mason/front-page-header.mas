&nbsp;&nbsp;\
<button class="action-button" type="submit">Search</button>
  </form>

  <& sitewide-search-help.mas &>

  <& /lib/rounded-corners-bottom.mas &>

 </div>

 <div class="force-clear"></div>

<%once>
